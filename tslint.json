{
    "rulesDirectory": [
        "node_modules/tslint-eslint-rules/dist/rules",
        "node_modules/tslint-microsoft-contrib"
    ],
    "rules": {
        "align": [true, "statements"],
        "ban": false,
        "class-name": true,
        "comment-format": [true, "check-space"],
        "curly": true,
        "eofline": true,
        "export-name": false,
        "forin": true,
        "import-name": false,
        "indent": [true, "spaces"],
        "interface-name": [false, "always-prefix"],
        "jsdoc-format": true,
        "label-position": true,
        /*         "max-line-length": [
            true,
            140
        ], */
        "member-access": true,
        "missing-jsdoc": false,
        "no-any": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": [true],
        "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
        "no-construct": true,
        "no-debugger": true,
        "no-default-export": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-inferrable-types": [true, "ignore-params"],
        "no-internal-module": true,
        "no-null-keyword": true,
        //"no-require-imports": true,
        "no-relative-imports": false,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": false,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "no-var-requires": true,
        "object-literal-sort-keys": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "quotemark": [true, "single"],
        "radix": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "switch-default": true,
        /* "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ], */
        "triple-equals": [true, "allow-null-check"],
        "typedef": [true, "call-signature", "property-declaration"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [true, "allow-leading-underscore"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        /************************************************************************************************************
         * Microsoft Secure Development Lifecycle rules                                                             *
         * see https://github.com/Microsoft/tslint-microsoft-contrib/blob/master/recommended_ruleset.js for details *
         ************************************************************************************************************/
        /**
         * Security Rules. The following rules should be turned on because they find security issues
         * or are recommended in the Microsoft Secure Development Lifecycle (SDL)
         */
        "no-banned-terms": true,
        "no-delete-expression": true,
        "no-disable-auto-sanitization": true,
        "no-document-domain": true,
        "no-document-write": true,
        "no-exec-script": true,
        "no-function-constructor-with-string-args": true,
        "no-http-string": [
            true,
            "http://em-muctest-server01.emundo.dmz20:8080/"
        ],
        "no-inner-html": true,
        "no-octal-literal": true,
        "no-reserved-keywords": false,
        "no-string-based-set-immediate": true,
        "no-string-based-set-interval": true,
        "no-string-based-set-timeout": true,
        "react-no-dangerous-html": true,
        /**
         * Common Bugs and Correctness. The following rules should be turned on because they find
         * common bug patterns in the code or enforce type safety.
         */
        "chai-vague-errors": true,
        "jquery-deferred-must-complete": true,
        "mocha-avoid-only": true,
        // disabled due to false positives on angular-cookie, and we're not using Backbone.js, anyway
        "no-backbone-get-set-outside-model": false,
        "no-constant-condition": true,
        "no-control-regex": true,
        "no-duplicate-case": true,
        "no-increment-decrement": true,
        "no-invalid-regexp": true,
        "no-invalid-this": true,
        "no-jquery-raw-elements": true,
        "no-regex-spaces": true,
        "no-sparse-arrays": true,
        "no-stateless-class": false,
        "no-unnecessary-bind": true,
        "no-unnecessary-override": true,
        "promise-must-complete": true,
        "react-this-binding-issue": true,
        "use-isnan": true,
        "use-named-parameter": true,
        "valid-typeof": true,
        /**
         * Code Clarity. The following rules should be turned on because they make the code
         * generally more clear to the reader.
         */
        // Changed naming convention of static methods. Also allow method names that are not only capitalized
        "function-name": [
            true,
            {
                "method-regex": "^[a-z][\\w\\d]+$",
                "private-method-regex": "^[a-z][\\w\\d]+$",
                "protected-method-regex": "^[a-z][\\w\\d]+$",
                "static-method-regex": "",
                "function-regex": "^[a-z][\\w\\d]+$"
            }
        ],
        "max-func-body-length": [
            true,
            100,
            {
                "ignore-parameters-to-function-regex": "describe"
            }
        ],
        "new-parens": true,
        "no-empty-interface": true,
        "no-for-in": true,
        "no-function-expression": true,
        "no-multiline-string": true, // multiline-strings often introduce unnecessary whitespace into the string literals
        "no-typeof-undefined": true,
        "no-unnecessary-local-variable": true,
        "no-this-assignment": true,
        "one-variable-per-declaration": [true],
        "prefer-array-literal": true,
        "prefer-const": true,
        /**
         * Whitespace related rules. The only recommended whitespace strategy is to pick a single format and
         * be consistent.
         */
        "no-empty-line-after-opening-brace": false,
        /**
         * Controversial/Configurable rules.
         */
        "no-namespace": false, // only enable this if you are not using modules/namespaces
        "no-reference": true, // in general you should use a module system and not /// reference imports
        "no-unexternalized-strings": false, // the VS Code team has a specific localization process that this rule enforces
        // pick one of the two following type-cast formats and use it consistently
        "prefer-type-cast": false,
        "no-angle-bracket-type-assertion": true
    }
}
