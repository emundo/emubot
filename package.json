{
    "name": "@emundo/emubot",
    "version": "0.4.0",
    "description": "Middleware used to easily setup chatbots on a variety of messenger platforms using different NLP services.",
    "keywords": [
        "chatbot",
        "bot framework",
        "emubot",
        "rasa",
        "facebook",
        "facebook messenger",
        "slack",
        "snips",
        "dialogflow"
    ],
    "license": "apache-2.0",
    "main": "dist/src/framework/index.js",
    "types": "src/framework/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/emundo/emubot.git"
    },
    "dependencies": {
        "@slack/events-api": "2.3.1",
        "argparse": "^1.0.10",
        "body-parser": "1.19.0",
        "chalk": "^3.0.0",
        "cors": "^2.8.5",
        "crypto-js": "3.1.9-1",
        "dialogflow": "0.12.2",
        "express": "4.17.1",
        "lodash": "^4.17.15",
        "remove-markdown": "0.3.0",
        "request": "2.88.0",
        "request-promise-native": "1.0.8",
        "typescript": "3.7.4",
        "winston": "3.2.1"
    },
    "scripts": {
        "lint": "eslint 'src/**/*.ts'; eslint 'test/**/*'; exit 0",
        "prettier": "prettier --config .prettierrc.json --ignore-path .prettierignore --write '{src,test}/**/*.ts'",
        "tsc": "tsc",
        "start": "node dist/src/framework/main.js",
        "compodocs": "npx compodoc -p tsconfig.json -d docs/api_reference/ --theme readthedocs -n 'emubot API Documentation' --customFavicon ./docs/_static/favicon.png -a ./docs/_static/",
        "createDocs": "rm -rf ./docs/api_reference && npm run compodocs && cd docs && make html",
        "sonar-scanner": "node_modules/sonarqube-scanner/dist/bin/sonar-scanner",
        "start-cli": "node dist/src/tools/cli.js",
        "test": "mocha -r ts-node/register test/**/*Test.ts",
        "test_no_log": "loggingLevel='emerg' npm test"
    },
    "devDependencies": {
        "@compodoc/compodoc": "1.1.11",
        "@types/argparse": "^1.0.38",
        "@types/body-parser": "1.17.1",
        "@types/chai": "^4.2.7",
        "@types/chai-as-promised": "^7.1.2",
        "@types/cors": "2.8.6",
        "@types/dialogflow": "0.11.0",
        "@types/express": "4.17.2",
        "@types/lodash": "^4.14.144",
        "@types/mocha": "^5.2.7",
        "@types/node": "12.12.5",
        "@types/remove-markdown": "0.1.1",
        "@types/request-promise-native": "1.0.17",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "2.16.0",
        "@typescript-eslint/parser": "2.16.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.9.0",
        "eslint-plugin-prettier": "3.1.2",
        "mocha": "^7.0.0",
        "prettier": "1.19.1",
        "sonarqube-scanner": "2.5.0",
        "ts-node": "^8.6.2"
    }
}
