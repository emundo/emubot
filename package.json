{
    "name": "@emundo/emubot",
    "version": "0.2.0",
    "description": "Middleware used to easily setup chatbots on a variety of messenger platforms using different NLP services.",
    "keywords": [
        "chatbot",
        "bot framework",
        "emubot",
        "rasa",
        "facebook",
        "facebook messenger",
        "slack",
        "snips",
        "dialogflow"
    ],
    "license": "apache-2.0",
    "main": "dist/index.js",
    "types": "src/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/emundo/emubot.git"
    },
    "dependencies": {
        "@compodoc/compodoc": "1.1.11",
        "@slack/events-api": "2.3.0",
        "body-parser": "1.19.0",
        "crypto-js": "3.1.9-1",
        "dialogflow": "0.12.2",
        "express": "4.17.1",
        "lodash": "4.17.15",
        "remove-markdown": "0.3.0",
        "request": "2.88.0",
        "request-promise-native": "1.0.8",
        "typescript": "3.6.4",
        "winston": "3.2.1"
    },
    "scripts": {
        "lint": "eslint 'src/**/*.ts'; exit 0",
        "prettier": "prettier --config .prettierrc.json --ignore-path .prettierignore --write 'src/**/*.ts'",
        "tsc": "tsc",
        "start": "node dist/main.js",
        "compodocs": "npx compodoc -p tsconfig.json -d docs/api_reference/ --theme readthedocs -n 'emubot API Documentation' --customFavicon ./docs/_static/favicon.png -a ./docs/_static/",
        "createDocs": "rm -rf ./docs/api_reference && npm run compodocs && cd docs && make html",
        "sonar-scanner": "node_modules/sonarqube-scanner/dist/bin/sonar-scanner"
    },
    "devDependencies": {
        "@types/body-parser": "1.17.1",
        "@types/cors": "2.8.6",
        "@types/dialogflow": "0.11.0",
        "@types/express": "4.17.2",
        "@types/lodash": "4.14.144",
        "@types/node": "12.12.5",
        "@types/remove-markdown": "0.1.1",
        "@types/request-promise-native": "1.0.17",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "2.6.0",
        "@typescript-eslint/parser": "2.6.0",
        "eslint": "6.6.0",
        "eslint-config-prettier": "6.5.0",
        "eslint-plugin-prettier": "3.1.1",
        "prettier": "1.18.2",
        "sonarqube-scanner": "2.5.0"
    }
}
